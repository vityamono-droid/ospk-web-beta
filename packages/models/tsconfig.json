{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "skipLibCheck": true,

    "esModuleInterop": true,
    "rewriteRelativeImportExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,

    "declaration": true,

    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dest",

    "paths": {
      "@common": ["src/index.ts"],
      "@announces": ["src/announces/index.ts"],
      "@articles": ["src/articles/index.ts"],
      "@auth": ["src/auth/index.ts"],
      "@carousels": ["src/carousels/index.ts"],
      "@clients": ["src/clients/index.ts"],
      "@contacts": ["src/contacts/index.ts"],
      "@departments": ["src/departments/index.ts"],
      "@employees": ["src/employees/index.ts"],
      "@news": ["src/@news/index.ts"],
      "@orders": ["src/orders/index.ts"],
      "@requests": ["src/requests/index.ts"],
      "@services": ["src/services/index.ts"],
      "@users": ["src/users/index.ts"]
    }
  },
  "include": ["src/**/*.ts"]
}
